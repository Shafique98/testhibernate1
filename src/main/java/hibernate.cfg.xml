<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC 
  "-//Hibernate/Hibernate Configuration DTD 3.0//EN" 
  "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- hiberante-cfg.xml example for Hibernate 3 -->

<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
		<property name="connection.url">jdbc:oracle:thin:@localhost:1521:xe</property>
		<property name="dialect">org.hibernate.dialect.OracleDialect</property>
		<property name="connection.username">testHibernate</property>
		<property name="connection.password">hibernate</property>
		<property name="connection.pool_size">10</property>
		<property name="current_session_context_class">thread</property>
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
		<property name="hbm2ddl.auto">update</property>
		<property name="show_sql">true</property>

		<mapping class="com.velociter.hibernate.component.training.TrainingCenter" />
		<mapping class="com.velociter.hibernate.component.order.Order" />
		<mapping class="com.velociter.hibernate.component.songdetail.Song" />
		<mapping class="com.velociter.hibernate.component.animal.Animal" />
		<mapping class="com.velociter.hibernate.component.foodfactory.FoodFactory"/>
		
		
		<mapping class="com.velociter.hibernate.shopping.Shopping" />
	</session-factory>
</hibernate-configuration>















