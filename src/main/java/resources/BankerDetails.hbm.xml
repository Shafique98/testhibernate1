<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.velociter.hibernate.bank.BankerDetails" table="BANKER">
		<id name="bankerID" column="BANKERID" >
			<generator class="increment"></generator>
		</id>
		<property name="bankerName" column="BANKER_NAME" type="string"></property>
		<property name="bankerContact" column="BANKER_CONTACT" type="string"></property>
		<property name="bankerOccupation" column="BANKER_OCCUPATION" type="string"></property>
		<property name="bankerAddress" column="BANKER_ADRESS" type="string"></property>
		<property name="bankerAccountNumber" column="BANKER_ACCOUNT_NUMBER" type="int"></property>
		<property name="bankerAccountType" column="BANKER_ACCOUNT_TYPE" type="string"></property>
		<property name="bankerAccountBalance" column="BANKER_ACCOUNT_BALANCE" type="float"></property>
		<property name="bankerAtmNumber" column="BANKER_ATM_NUMBER" type="int"></property>
		<property name="bankerBranchName" column="BANKER_BRANCH_NAME" type="string"></property>
		<property name="bankerBranchIfscCode" column="BANKER_BRANCH_IFSC_CODE" type="string"></property>
		<property name="bankerBranchAddress" column="BANKER_BRANCH_ADDRESS" type="string"></property>
		<property name="bankerBranchContactNumber" column="BANKER_BRANCH_CONTACT" type="string"></property>
	</class>
</hibernate-mapping>