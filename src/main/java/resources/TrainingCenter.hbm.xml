<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.velociter.hibernate.component.training.TrainingCenter" table="TRAININGCENTER">
		<id name="courseId">
			<generator class="increment"></generator>
		</id>
		<component name="course" class="com.velociter.hibernate.component.training.Courses">
			<property name="courseName" type="string"></property>
			<property name="courseDuration" type="string"></property>
			<property name="courseFees" type="float" ></property>
		</component>
		<component name="student" class="com.velociter.hibernate.component.training.Student">
		<property name="studentRollNo" type="long"></property>
		<property name="studentName" type="string"></property>
		</component>
	</class>

</hibernate-mapping>