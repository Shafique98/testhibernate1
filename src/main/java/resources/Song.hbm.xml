<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.velociter.hibernate.component.songdetail.Song" table="SONG">
		<id name="id" column="ID">
			<generator class="increment" />
		</id>
		<property name="songName" type="string"></property>
		<property name="songType" type="string"></property>
		<property name="songDuration" type="string"></property>
		<component name="singer"
			class="com.velociter.hibernate.component.songdetail.Singer">
			<property name="singerName" type="string"></property>
			<property name="helpingSingerName" type="string"></property>
			<property name="writerName" type="string"></property>
		</component>
	</class>
</hibernate-mapping>