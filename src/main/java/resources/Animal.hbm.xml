<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.velociter.hibernate.component.animal.Animal" table="ANIMAL">
		<id name="id">
			<generator class="increment"></generator>
		</id>
		<property name="animalName"></property>
		<property name="animalBreed"></property>
		<property name="animalType"></property>
		<property name="animalWieght"></property>
		<property name="animalHeight"></property>
		<property name="legs"></property>
		<property name="reproductType"></property>
		<property name="dietType"></property>
		<property name="food"></property>
		<property name="lifeSpan"></property>
		<component name="domesticAnimal" class="com.velociter.hibernate.component.animal.Domestic">
			<property name="purposeOfCapturing"></property>
		</component>
		<component name="wildAnimal" class="com.velociter.hibernate.component.animal.Wild">
			<property name="place"></property>
		</component>
	</class>

</hibernate-mapping>