<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class
		name="com.velociter.hibernate.component.ticket.MovieTicket"
		table="MOVIETICKET">
		<id name="ticketNo" type="int" column="ID">
			<generator class="increment"></generator>
		</id>
		<property name="movieType" type="string"></property>
		<component name="tckt"
			class="com.velociter.hibernate.component.ticket.Ticket">
			<property name="movieName" type="string"></property>
			<property name="movieTime" type="string"></property>
			<property name="seatType" type="string"></property>
			<property name="tctCharge" type="float"></property>
		</component>
	</class>

</hibernate-mapping>