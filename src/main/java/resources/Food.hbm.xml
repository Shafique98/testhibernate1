<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class
		name="com.velociter.hibernate.component.foodfactory.FoodFactory" table="FOODFACTORY">
		<id name="id" type="long">
			<generator class="increment"></generator>
		</id>
		<component name="dish"
			class="com.velociter.hibernate.component.foodfactory.Dish">
			<property name="dishID" type="long"></property>
			<property name="dishName" type="string"></property>
			<property name="dishType" type="string"></property>
		</component>
		<component name="price" class="com.velociter.hibernate.component.foodfactory.Price">
		 	<property name="dishPrice" type="float"></property>
			<property name="gst" type="float"></property>
			<property name="dishDiscount" column="discount" type="float"></property>
			<property name="total" type="float"></property> 
		</component> 
	</class>

</hibernate-mapping>