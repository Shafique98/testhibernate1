<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.velociter.hibernate.component.order.Order"
		table="ORDERS">
		<id name="orderId" type="long" column="ID">
			<generator class="increment"></generator>
		</id>
		<property name="totals" type="long"></property>
		<component name="item"
			class="com.velociter.hibernate.component.order.Item">
			<property name="itemName" type="string"></property>
			<property name="itemType" type="string"></property>
			<property name="itemPrice" type="float"></property>
			<property name="itemQuantity" type="int"></property>
		</component>
		<component name="customer" class="com.velociter.hibernate.component.order.Customer">
			<property name="customerName" type="string"></property>
			<component name="address"
				class="com.velociter.hibernate.component.order.Address">
				<property name="street" type="string"></property>
				<property name="areaName" type="string"></property>
				<property name="city" type="string"></property>
				<property name="state" type="string"></property>
				<property name="country" type="string"></property>
				<property name="pinCode" type="int"></property>
			</component>
		</component>
	</class>
</hibernate-mapping>