<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.velociter.hibernate.payment.Payment" table="PAYMENT2">

		<id name="paymentID" type="long" column="PAYMENT_ID">
			
		</id>
			<property name="paymentID" column="PAYMENT_ID"></property>
			<property name="amount" column="AMMOUNT" type="float"></property>
			
		<joined-subclass name="com.velociter.hibernate.payment.CreditCardPayment" table="CREDIT" >
			<key column="PAYMENT_ID" />
			<property name="CCType" column="CCTYPE" type="string"></property>
		</joined-subclass>
		
		<joined-subclass name="com.velociter.hibernate.payment.CashPayment" table="CASH" >
			<key column="PAYMENT_ID" />
			<property name="currencyType" column="CURRENCYTYPE" type="string"></property>
		</joined-subclass>

		<joined-subclass name="com.velociter.hibernate.payment.ChequePayment" table="CHEQUE">
			<key column="PAYMENT_ID" />
			<property name="chequeNumber" column="CHEQUENUMBER" type="long"></property>
		</joined-subclass>
	</class>

</hibernate-mapping>	