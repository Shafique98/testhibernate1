<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.velociter.hibernate.emp.Emp" table="EMP1">
		<id name="id" type="int">
			<generator class="increment"></generator>
		</id>
		<property name="name" type="string"></property>
		<component name="Address" class="com.velociter.hibernate.emp.Address">
			<property name="city" type="string"></property>
			<property name="state" type="string"></property>
			<property name="country" type="string"></property>
			<property name="pincode" type="int"></property>
		</component>
	</class>
</hibernate-mapping>